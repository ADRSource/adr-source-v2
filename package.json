{
  "name": "adr-source-v2",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "gen": "graphql-codegen --require dotenv/config --config codegen.ts dotenv_config_path=.env.local",
    "dev": "pnpm run gen && next dev --turbopack",
    "dev:inspect": "NODE_OPTIONS='--inspect' pnpm run gen && next dev",
    "build": "pnpm run gen && next build && next-sitemap",
    "start": "next start",
    "format": "prettier --write ./src",
    "lint": "pnpm run gen && eslint ./src",
    "test:e2e": "pnpm run test:e2e:dev --silent",
    "test:e2e:dev": "playwright test --ui",
    "pretest:e2e:run": "pnpm run build",
    "test:e2e:run": "cross-env CI=true playwright test",
    "test:e2e:install": "pnpm exec playwright install --with-deps chromium",
    "typecheck": "pnpm run gen && tsc --noEmit"
  },
  "dependencies": {
    "@date-fns/tz": "^1.1.2",
    "@graphcms/rich-text-react-renderer": "^0.6.1",
    "@hygraph/utils": "^1.2.1",
    "@radix-ui/react-visually-hidden": "^1.1.0",
    "@react-aria/focus": "^3.18.1",
    "@react-aria/overlays": "^3.23.1",
    "@uidotdev/usehooks": "^2.4.1",
    "@vercel/analytics": "^1.3.1",
    "cva": "1.0.0-beta.3",
    "date-fns": "^4.1.0",
    "framer-motion": "^11.18.2",
    "graphql": "^16.9.0",
    "graphql-request": "^7.1.0",
    "graphql-tag": "^2.12.6",
    "next": "15.3.5",
    "next-sitemap": "^4.2.3",
    "p-throttle": "^6.1.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-error-boundary": "^4.0.13",
    "react-merge-refs": "^2.1.1",
    "react-use-measure": "^2.1.1",
    "react-wrap-balancer": "^1.1.1",
    "server-only": "^0.0.1",
    "sharp": "^0.33.4",
    "tailwind-merge": "^2.4.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@graphcms/rich-text-types": "^0.5.1",
    "@graphql-codegen/add": "^5.0.3",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/schema-ast": "^4.1.0",
    "@graphql-codegen/typescript": "^4.0.9",
    "@graphql-codegen/typescript-graphql-request": "^6.2.0",
    "@graphql-codegen/typescript-operations": "^4.2.3",
    "@playwright/test": "^1.45.3",
    "@tailwindcss/typography": "^0.5.13",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/node": "22.1.0",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "eslint": "8.57.0",
    "eslint-config-next": "15.3.5",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.8",
    "postcss": "^8.4.40",
    "postcss-easing-gradients": "^3.0.1",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^10.0.0",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.0.0",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "tailwindcss": "^3.4.7",
    "typescript": "5.5.4"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.1.8",
      "@types/react-dom": "19.1.6"
    }
  }
}
