{
	"name": "adr-source-v2",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"gen": "graphql-codegen --require dotenv/config --config codegen.ts dotenv_config_path=.env.local",
		"dev": "pnpm run gen && next dev",
		"dev:inspect": "NODE_OPTIONS='--inspect' pnpm run gen && next dev",
		"build": "pnpm run gen && next build && next-sitemap",
		"start": "next start",
		"format": "prettier --write ./src",
		"lint": "pnpm run gen && eslint ./src",
		"test:e2e": "pnpm run test:e2e:dev --silent",
		"test:e2e:dev": "playwright test --ui",
		"pretest:e2e:run": "pnpm run build",
		"test:e2e:run": "cross-env CI=true playwright test",
		"test:e2e:install": "pnpm exec playwright install --with-deps chromium",
		"typecheck": "pnpm run gen && tsc --noEmit"
	},
	"dependencies": {
		"@graphcms/rich-text-react-renderer": "^0.6.1",
		"@hygraph/utils": "^1.2.1",
		"@radix-ui/react-visually-hidden": "^1.0.3",
		"@react-aria/focus": "^3.16.2",
		"@react-aria/overlays": "^3.21.1",
		"@uidotdev/usehooks": "^2.4.1",
		"@vercel/analytics": "^1.2.2",
		"framer-motion": "^11.0.20",
		"graphql": "^16.8.1",
		"graphql-request": "^6.1.0",
		"graphql-tag": "^2.12.6",
		"next": "^14.1.4",
		"next-sitemap": "^4.2.3",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"react-error-boundary": "^4.0.13",
		"react-merge-refs": "^2.1.1",
		"react-use-measure": "^2.1.1",
		"react-wrap-balancer": "^1.1.0",
		"server-only": "^0.0.1",
		"sharp": "^0.33.2",
		"tailwind-merge": "^2.2.2",
		"tailwind-variants": "^0.2.1",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@graphcms/rich-text-types": "^0.5.1",
		"@graphql-codegen/add": "^5.0.2",
		"@graphql-codegen/cli": "^5.0.2",
		"@graphql-codegen/schema-ast": "^4.0.2",
		"@graphql-codegen/typescript": "^4.0.6",
		"@graphql-codegen/typescript-graphql-request": "^6.2.0",
		"@graphql-codegen/typescript-operations": "^4.2.0",
		"@playwright/test": "^1.42.1",
		"@tailwindcss/typography": "^0.5.10",
		"@total-typescript/ts-reset": "^0.5.1",
		"@types/node": "20.11.30",
		"@types/react": "18.2.69",
		"@types/react-dom": "18.2.22",
		"@typescript-eslint/eslint-plugin": "^7.3.1",
		"@typescript-eslint/parser": "^7.3.1",
		"autoprefixer": "^10.4.19",
		"cross-env": "^7.0.3",
		"dotenv": "^16.4.5",
		"eslint": "8.57.0",
		"eslint-config-next": "^14.1.4",
		"eslint-config-prettier": "^9.1.0",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
		"postcss": "^8.4.38",
		"postcss-easing-gradients": "^3.0.1",
		"postcss-flexbugs-fixes": "^5.0.2",
		"postcss-preset-env": "^9.5.2",
		"prettier": "^3.2.5",
		"prettier-plugin-organize-imports": "^3.2.4",
		"prettier-plugin-tailwindcss": "^0.5.12",
		"tailwindcss": "^3.4.1",
		"typescript": "5.4.3"
	}
}
